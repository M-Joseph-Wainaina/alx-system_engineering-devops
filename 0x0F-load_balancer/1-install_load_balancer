# Install and configure HAproxy on your lb-01 server.
# Configure HAproxy so that it send traffic to web-01 and web-02
# Distribute requests using a roundrobin algorithm
# Make sure that HAproxy can be managed via an init script
#Make sure that your servers are configured with the right hostnames: [STUDENT_ID]-web-01 and [STUDENT_ID]-web-02

# Update package list
apt-get update

# Install HAproxy
apt-get install -y haproxy

# # Configure HAproxy
sed -i 's/#ENABLED=1/ENABLED=1/' /etc/default/haproxy
sed -i 's/.*frontend.*$/frontend http-in\n    bind *:80\n    default_backend servers/' /etc/haproxy/haproxy.cfg
sed -i '/backend\s\+servers/,+2 d' /etc/haproxy/haproxy.cfg
sed -i '/backend\s\+servers/i\    balance roundrobin\n    server web-01 18.209.152.17:80 check\n    server web-02 34.234.201.151:80 check' /etc/haproxy/haproxy.cfg

# Restart HAproxy
service haproxy restart
